local Players   = game:GetService("Players")
local player    = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NoOverlayPopup"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local container = Instance.new("Frame")
container.Name = "Container"
container.Size = UDim2.new(0.5, 0, 0.45, 0)
container.Position = UDim2.new(0.5, 0, 0.5, 0)
container.AnchorPoint = Vector2.new(0.5, 0.5)
container.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
container.BorderSizePixel = 0
container.Parent = screenGui

local containerCorner = Instance.new("UICorner")
containerCorner.CornerRadius = UDim.new(0, 12)
containerCorner.Parent = container

local containerStroke = Instance.new("UIStroke")
containerStroke.Color = Color3.fromRGB(70, 70, 85)
containerStroke.Thickness = 2
containerStroke.Parent = container

local padding = Instance.new("UIPadding")
padding.PaddingLeft   = UDim.new(0, 50)
padding.PaddingRight  = UDim.new(0, 50)
padding.PaddingTop    = UDim.new(0, 48) 
padding.PaddingBottom = UDim.new(0, 16)
padding.Parent = container

local listLayout = Instance.new("UIListLayout")
listLayout.Parent = container
listLayout.SortOrder = Enum.SortOrder.LayoutOrder
listLayout.Padding = UDim.new(0, 40)

local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Text = "X"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 40
closeButton.TextColor3 = Color3.fromRGB(200, 80, 80)
closeButton.BackgroundTransparency = 1
closeButton.Size = UDim2.new(0, -25, 0, -20)    
closeButton.Position = UDim2.new(0, 16, 0, 16)  
closeButton.ZIndex = 2                       
closeButton.Parent = container

closeButton.MouseEnter:Connect(function()
    closeButton.TextColor3 = Color3.fromRGB(220, 100, 100)
end)
closeButton.MouseLeave:Connect(function()
    closeButton.TextColor3 = Color3.fromRGB(200, 80, 80)
end)

local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "Title"
titleLabel.Text = "Get your FREE key in our discord"
titleLabel.Font = Enum.Font.GothamBlack
titleLabel.TextSize = 40
titleLabel.TextColor3 = Color3.fromRGB(240, 240, 240)
titleLabel.BackgroundTransparency = 1
titleLabel.Size = UDim2.new(1, 0, 0, 48)       
titleLabel.TextWrapped = true
titleLabel.TextXAlignment = Enum.TextXAlignment.Center
titleLabel.LayoutOrder = 1
titleLabel.Parent = container

local subtitleLabel = Instance.new("TextLabel")
subtitleLabel.Name = "Subtitle"
subtitleLabel.Text = "Sorry, please join our discord to start using the script. Once there, you can enjoy FREE access to our 30+ script library. Thanks for helping support our free hub."
subtitleLabel.Font = Enum.Font.Gotham
subtitleLabel.TextSize = 25
subtitleLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
subtitleLabel.BackgroundTransparency = 1
subtitleLabel.Size = UDim2.new(1, 0, 0, 100)
subtitleLabel.TextWrapped = true
subtitleLabel.TextXAlignment = Enum.TextXAlignment.Center
subtitleLabel.TextYAlignment = Enum.TextYAlignment.Top
subtitleLabel.LayoutOrder = 2
subtitleLabel.Parent = container

local buttonsFrame = Instance.new("Frame")
buttonsFrame.Name = "ButtonsContainer"
buttonsFrame.Size = UDim2.new(1, 0, 0, 56) 
buttonsFrame.BackgroundTransparency = 1
buttonsFrame.LayoutOrder = 3
buttonsFrame.Parent = container

local hLayout = Instance.new("UIListLayout")
hLayout.Parent = buttonsFrame
hLayout.FillDirection = Enum.FillDirection.Horizontal
hLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
hLayout.SortOrder = Enum.SortOrder.LayoutOrder
hLayout.Padding = UDim.new(0, 0)        

local button1 = Instance.new("TextButton")
button1.Name = "CopyLink1"
button1.Text = "Copy Discord Link"
button1.Font = Enum.Font.GothamSemibold
button1.TextSize = 25
button1.TextColor3 = Color3.fromRGB(240, 240, 240)
button1.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
button1.BorderSizePixel = 0
button1.Size = UDim2.new(0, 300, 1, 0)        
button1.LayoutOrder = 1
button1.Parent = buttonsFrame

local btn1Corner = Instance.new("UICorner")
btn1Corner.CornerRadius = UDim.new(0, 10)
btn1Corner.Parent = button1
button1.MouseEnter:Connect(function()
    button1.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
end)

button1.MouseLeave:Connect(function()
    button1.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
end)

button1.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/x2W8mbvJBU")
end)

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
